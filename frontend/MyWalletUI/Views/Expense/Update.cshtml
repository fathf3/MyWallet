@model UpdateExpenseDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Gider Güncelle</h4>
        <hr>
        <form class="form-group" asp-controller="Expense" asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly"></div>
            <p>Maliyet</p>
            <span asp-validation-for="Cost" class="text-danger"></span>
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Cost" type="text" class="form-control" placeholder="500" aria-describedby="basic-addon1" required>
                </div>
            </div>
            <p>Gider</p>
            
            <div class="form-group">
                <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))" required></select>
            </div>
            <p>Gider Durumu</p>
            <span asp-validation-for="Status" class="text-danger"></span>
            <div class="form-group">
                <select asp-for="Status" id="expenseStatus" class="form-control" required>
                    <option value='true'>Aktif</option>
                    <option value='false'>Pasif</option>

                </select>
            </div>
            <p>Açıklama</p>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-group">
                <textarea asp-for="Description" rows="5" cols="50" class="form-control" required></textarea>
            </div>
            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            <div class="form-group">

                <input asp-for="ExpenseDate" type="date" value="@DateTime.Now.Date.ToShortDateString()" required />
            </div>
            <div class="form-group text-center align-items-center">
                <button class="btn btn-outline-success  ">Kaydet</btn>
            </div>
        </form>
    </div>
</div>

