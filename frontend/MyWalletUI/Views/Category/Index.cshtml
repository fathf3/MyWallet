@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Kategori Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
    string badgeInfo = "";
    string textInfo = "";


}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <a class="nav-link btn btn-success create-new-button" href="/Category/Create/">+ Yeni Kategori Ekle</a>
            <hr>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Tipi</th>
                            <th>Kategori Durumu</th>
                            <th>Aktif</th>
                            <th>Pasif</th>
                            <th>Güncelle</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@category.Name</td>
                                <td>
                                    @if (category.CategoryType)
                                    {
                                        badgeInfo = "badge badge-success";
                                        textInfo = "Gelir";


                                    }
                                    else
                                    {
                                        badgeInfo = "badge badge-danger";
                                        textInfo = "Gider";

                                    }

                                    <label class="@badgeInfo">@textInfo</label>
                                </td>
                                <td>

                                    @if (category.Status)
                                    {
                                        badgeInfo = "badge badge-success";
                                        textInfo = "Aktif";


                                    }
                                    else
                                    {
                                        badgeInfo = "badge badge-danger";
                                        textInfo = "Pasif";

                                    }

                                    <label class="@badgeInfo">@textInfo</label>
                                    </td>
                                <td>
                                    <a class="btn btn-outline-info btn-group-lg" href="/Category/Active/@category.Id">
                                        <i class="mdi mdi-plus-circle"></i>
                                    </a>
                                </td>
                               <td>
                                    <a class="btn btn-outline-primary btn-group-lg" href="/Category/Delete/@category.Id">
                                        <i class="mdi mdi-minus"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-warning btn-group-lg" href="/Category/Update/@category.Id">
                                        <i class="mdi mdi-database"></i>
                                    </a>
                                </td>
                             
                            </tr>
                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>