
@{
    Layout = null;
}

<div class="row">

    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h2>Bakiye</h2>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.totalBalance.ToString("C", new CultureInfo("tr-TR"))</h2>

                            <!-- <p class="text-success ms-2 mb-0 font-weight-medium">+3.5%</p> -->
                        </div>
                        <!-- <h6 class="text-muted font-weight-normal">11.38% Since last month</h6> -->
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-codepen text-primary ms-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>  <!--Bakiye-->
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h2>Toplam Gelir</h2>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.totalIncome.ToString("C", new CultureInfo("tr-TR"))₺</h2>
                            <!-- <p class="text-success ms-2 mb-0 font-weight-medium">+8.3%</p> -->
                        </div>
                        <!-- <h6 class="text-muted font-weight-normal"> 9.61% Since last month</h6> -->
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-monitor text-success ms-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>  <!--Toplam Gelir-->
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h2>Toplam Gider</h2>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.totalExpense.ToString("C", new CultureInfo("tr-TR"))₺</h2>
                            <!-- <p class="text-danger ms-2 mb-0 font-weight-medium">-2.1% </p> -->
                        </div>
                        <!-- <h6 class="text-muted font-weight-normal">2.27% Since last month</h6> -->
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-wallet-travel text-danger ms-auto"></i>

                    </div>
                </div>
            </div>
        </div>
    </div>  <!--Toplam Gider-->

</div>
<div class="row">

    <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <div class="d-flex align-items-center align-self-start">

                            @if (@ViewBag.incomeDay < 0)
                            {
                                <h2 class="text-danger mb-0">@ViewBag.incomeDay.ToString("C", new CultureInfo("tr-TR"))</h2>
                                <p class="text-danger ms-2 mb-0 font-weight-medium">@ViewBag.incomeDayDif.ToString("0.00")%</p>

                                

                            }
                            else
                            {
                                <h3 class="text-success mb-0">@ViewBag.incomeDay.ToString("C", new CultureInfo("tr-TR"))</h3>
                                <p class="text-success ms-2 mb-0 font-weight-medium">+@ViewBag.incomeDayDif.ToString("0.00")%</p>
                                
                            }

                        </div>
                    </div>
                    @if (@ViewBag.incomeDayDif < 0)
                    {
                        <div class="col-1">
                            <div class="icon icon-box-danger align-items-right">
                                <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="col-1">
                            <div class="icon icon-box-success align-items-right">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>

                    }

                </div>
                <h6 class="text-muted font-weight-normal">Günlük Gelir</h6>
            </div>
        </div>
    </div>  <!--Günlük Gelir-->

    <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <div class="d-flex align-items-center align-self-start">

                            @if (@ViewBag.incomeThisWeek < 0)
                            {
                                <h2 class="text-danger mb-0">@ViewBag.incomeThisWeek.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</h2>
                                <p class="text-danger ms-2 mb-0 font-weight-medium">@ViewBag.incomeThisWeekDif.ToString("0.00")%</p>

                            }
                            else
                            {
                                <h3 class="text-success mb-0">@ViewBag.incomeThisWeek.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</h3>
                                <p class="text-success ms-2 mb-0 font-weight-medium">+@ViewBag.incomeThisWeekDif.ToString("0.00")%</p>

                            }

                        </div>
                    </div>
                    @if (@ViewBag.incomeThisWeekDif < 0)
                    {
                        <div class="col-1">
                            <div class="icon icon-box-danger align-items-right">
                                <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="col-1">
                            <div class="icon icon-box-success align-items-right">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>

                    }

                </div>
                <h6 class="text-muted font-weight-normal">Haftalık Gelir</h6>
            </div>
        </div>
    </div>  <!--Haftalık Gelir-->

    <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <div class="d-flex align-items-center align-self-start">

                            @if (@ViewBag.incomeThisMonthDif < 0)
                            {
                                <h2 class="text-danger mb-0">@ViewBag.incomeThisMonth.ToString("C", new CultureInfo("tr-TR"))₺</h2>
                                <p class="text-danger ms-2 mb-0 font-weight-medium">@ViewBag.incomeThisMonthDif.ToString("0.00")%</p>

                            }
                            else
                            {
                                <h3 class="text-success mb-0">@ViewBag.incomeThisMonth.ToString("C", new CultureInfo("tr-TR"))₺</h3>
                                <p class="text-success ms-2 mb-0 font-weight-medium">+@ViewBag.incomeThisMonthDif.ToString("0.00")%</p>

                            }

                        </div>
                    </div>
                    @if (@ViewBag.incomeThisMonthDif < 0)
                    {
                        <div class="col-1">
                            <div class="icon icon-box-danger align-items-right">
                                <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="col-1">
                            <div class="icon icon-box-success align-items-right">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>

                    }

                </div>
                <h6 class="text-muted font-weight-normal">Aylık Gelir</h6>
            </div>
        </div>
    </div>  <!--Aylık Gelir-->

</div>