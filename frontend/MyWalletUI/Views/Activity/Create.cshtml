@model CreateActivityDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Servis Ekle</h4>
        <hr>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <form class="form-group" asp-controller="Activity" asp-action="Create" method="post">


            <p>Servis Adı</p>
            <div class="form-group">
                @* <span asp-validation-for="Name" class="text-danger"></span> *@
                <div class="input-group">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Servis Adı" aria-describedby="basic-addon1" required>
                </div>
            </div>
           
           
            <div class="form-group text-center align-items-center">
                <button class="btn btn-outline-success  ">Kaydet</btn>
            </div>
        </form>
    </div>
</div>

